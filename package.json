{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "A vanilla JavaScript to-do list application with local storage persistence and responsive design",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "http-server . -p 8080 -o",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=jest.config.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/**/*.js test/**/*.js",
    "lint:fix": "eslint src/**/*.js test/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "serve": "http-server . -p 8080"
  },
  "keywords": [
    "todo",
    "vanilla-js",
    "local-storage",
    "responsive",
    "es6-modules"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-security": "^1.7.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "homepage": ""
}